{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ESNext"
    ],
    "types": [
      "node",
      "jest"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "core/*": ["./src/core/*"],
      "cli/*": ["./src/cli/*"],
      "report/*": ["./src/report/*"],
    }
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": ["node_modules", "dist"]
}
